<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
  margin: 0;
  padding: 0;
  font-family: 'Trebuchet MS', sans-serif;
  background-color:#202123;
}
a {
    text-decoration: none;
    color: inherit;
}

/* forimage  */
img {
    max-width: 100%;
    max-height: 100%;
    display: block;
  }
  
.navbar {
    background-color: #333;
    color: #fff;
    position: sticky;
    top: 0;
    z-index: 100;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 10px;
}

.navbar .username {
    margin-right: 10px;
}

.navbar .button {
    margin-right: 10px;
}

.navbar .profile-pic {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 10px;
    background-color: #ccc;
}

.navbar .logout-button {
    margin-right: 10px;
}
/* code for chatbox */
.chat-container {
  max-width: 80vw;
  margin: 0 auto;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 20px;
  width: 100%;
  box-sizing: border-box;
  word-wrap: break-word; /* Add this property */
}

.chat-header {
  text-align: center;
  margin-bottom: 20px;
}

.chat-messages {
  min-height: fit-content;
  word-wrap: break-word; 
  
}

.message {
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 4px;
  word-wrap: break-word; 
}

.sender {
  background-color: #f0f0f0;
  text-align: left;
  word-wrap: break-word;
}

.receiver {
  background-color: #d4edff;
  text-align: left;
  word-wrap: break-word;
}

.message-text {
  margin: 0;
  word-wrap: break-word;
  white-space: pre-wrap;

}

.message-time {
  font-size: 12px;
  color: #999999;
}

.chat-input {
  display: flex;
  margin-top: 20px;
}

.message-input {
  flex: 1;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 10px;
  resize: none;
}

.send-button {
  margin-left: 10px;
  padding: 10px 20px;
  background-color: #4caf50;
  color: #ffffff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.send-button:hover {
  background-color: #45a049;
}


    </style>
    </style>
</head>
<body>
  <!-- navbar area  -->
  <div class="navbar">
    <span class="username"><%= locals.name %></span>
    <!-- <label class="button">
        <input type="checkbox">
        Sound
    </label> -->
    <div class="profile-pic"><img src="<%= locals.picture %>" alt=""></div>
    <button class="logout-button"><a href="/api/v1/logout">Logout</a></button>
</div>
    <!-- chat area  -->
    <div class="chat-container">
        <div class="chat-header">
          <h2>Chat Room</h2>
        </div>
        <div class="chat-messages" id="chat-messages">
            <% if(locals.conversation) { %>
                <% for(let i = 0;i < locals.conversation.length;i++) { %>
                    <div class="message sender">
                        <p class="message-text"><%= locals.conversation[i].fromUser %></p>
                      </div>
                      <div class="message receiver">
                        <p class="message-text"><%= locals.conversation[i].toUser %> </p>
                      </div>
                 <% } %>
             <% } %>
         
          <!-- Add more messages here -->
        </div>
        <div class="chat-input">
          <textarea class="message-input" id="text-input" placeholder="Type your message"></textarea>
          <button class="send-button" id="send-button" onclick="handleClick()">Send</button>
        </div>
      </div>

          <!-- new text stick to screen -->
    
</body>

<script>
    //function for handling the chat of the user with AI model
    async function handleClick(){
       const textForProcessing = document.getElementById("text-input")
    //    console.log(textForProcessing.value);
       if(textForProcessing.value !== ''){
        const sendButton = document.getElementById("send-button")
        sendButton.disabled = true
        sendButton.innerText = "...";
        let response = await fetch(`http://localhost:4000/api/v1/chat?prompt=${textForProcessing.value}`)
        response = await response.json();
        const data = response.data;
        const fileNumber = response.fileNumber;
        // 
        const parentElem = document.getElementById("chat-messages")
        const newElementHtml = `<div class="message sender">
                        <p class="message-text">${textForProcessing.value}</p>
                      </div>
                      <div class="message receiver">
                        <p class="message-text">${data}</p>
                      </div>`

        parentElem.innerHTML += newElementHtml;
        textForProcessing.value = '';
        const audio = new Audio();
        audio.src = `/output${fileNumber}.mp3`;
        audio.play();
        sendButton.disabled = false;
        sendButton.innerText = "Send";
        
       }
    }
    
</script>
</html>